# Environment mode (0 = development, 1 = production)
PRODUCTION=0

# Inter-module secret used by each Athena module to verify requests
# coming from the Assessment Module Manager
# REQUIRED when PRODUCTION=1 for every running module.
SECRET=12345abcdef

# SQLAlchemy database URL used by all Athena modules
# SQLite example (relative to each module dir):
DATABASE_URL=sqlite:///../data/data.sqlite
# PostgreSQL example:
# DATABASE_URL=postgresql://user:password@localhost:5432/athena

# OpenAI API configuration
OPENAI_API_KEY=
OPENAI_API_VERSION=2023-03-15-preview

# Azure OpenAI API configuration
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT="https://ase-se01.openai.azure.com"
AZURE_OPENAI_API_VERSION=2023-03-15-preview